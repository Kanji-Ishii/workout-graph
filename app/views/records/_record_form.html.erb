
<%= form_with model: @record, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label "種目名" %><br />
    <%= f.collection_select(:name_id, Exercise.all, :id, :name, {prompt: "種目を選択してください"}, class: 'form-control') %>
  </div>

  <div class="field">
    <%= f.label "日付" %><br />
    <%= f.date_select :date, include_blank: true, selected: Date.today , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label "重量" %><br />
    <%= f.number_field :weight, min:0 , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label "回数" %><br />
    <%= f.number_field :reps_count, min:0 , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label "備考" %><br />
    <%= f.text_area :note , class: 'form-control' %>
  </div>

  <div>
    <%= f.submit "記録を保存" %>
  </div>

<% end %>
