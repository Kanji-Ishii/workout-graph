<% provide(:title, "記録一覧") %>

<br>
<%= @exercise.name %>
<% @records.map do |record| %> <br>
  <%= "#{record.date} | 重量：#{record.weight} | 回数：#{record.reps_count} | RM：#{record.RM} | "%>
  <%= link_to "編集", edit_record_path(record.id) %>
  <%= link_to "削除", record_path(record.id, exercise_id: record.exercise_id) , method: :delete, data:{ confirm: "本当に削除しますか？"} %>
  <br><%= record.note %>
<% end %>
