<h1>Workout Graph</h1>
<h2>記録一覧</h2>

<h2> ログインユーザー： <%= current_user.name %> さん </h2> 
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %> 
<%= link_to "グラフを見る", exercises_path, method: :get %>
<%= link_to "記録する", new_record_path , method: :get %>

<br>
<%= @exercise.name %>
<% @records.map do |record| %> <br>
  <%= "#{record.date} | 重量：#{record.weight} | 回数：#{record.reps_count} | RM：#{record.RM} | "%>
  <%= link_to "編集", edit_record_path(record.id) %>
  <%= link_to "削除", record_path(record.id, exercise_id: record.exercise_id) , method: :delete, data:{ confirm: "本当に削除しますか？"} %>
  <br><%= record.note %>
<% end %>
