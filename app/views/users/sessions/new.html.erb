<% provide(:title, "ログイン") %>

<div class="form-container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <p class="label"><%= f.label :email %></p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-cotroll" %>
    </div>

    <div class="field">
      <p class="label"><%= f.label :password %></p>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-cotroll" %>
    </div>

    <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class: "checkbox" %>
        <%= f.label :remember_me %>
    <% end %>

    <div class="field">
      <%= f.submit "ログイン", class: "action" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
