<h2>New Recoed</h2>

<%= form_with( model: @record do |f|) %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.collection_select( :name_id, @exercise, :id, :name {prompt: "種目を選択してください"}) :name %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date, include_blank: true, selected: Date.today %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.number_field :weight %>
  </div>

  <div class="field">
    <%= f.label :reps_count %><br />
    <%= f.number_field :reps_count %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>

  <div>
    <%= f.submit "Save Record" %>
  </div>

<% end %>
